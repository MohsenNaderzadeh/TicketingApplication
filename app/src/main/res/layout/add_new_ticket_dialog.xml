<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/main_add_new_ticket_dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:fontFamily="@font/iranyekanbold"
            android:text="ایجاد یک تیکت جدید"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/main_add_new_ticket_dialog_title_tv"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_add_new_ticket_dialog_title_tv"
            android:padding="8dp">

            <TextView
                android:id="@+id/main_add_new_ticket_dialog_ticket_subject_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/iranyekanbold"
                android:maxLines="1"
                android:text="موضوع تیکت :" />

            <EditText
                android:id="@+id/main_add_new_ticket_dialog_ticket_subject_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_add_new_ticket_dialog_ticket_subject_tv"
                android:layout_margin="8dp"
                android:background="@drawable/background_round_borders_ed"
                android:fontFamily="@font/iranyekanbold"
                android:gravity="right"
                android:hint="موضوع تیکت"
                android:maxLines="1"
                android:padding="8dp" />

            <TextView
                android:id="@+id/main_add_new_ticket_dialog_ticket_related_department_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_add_new_ticket_dialog_ticket_subject_ed"
                android:layout_alignParentRight="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/iranyekanbold"
                android:text="بخش مربوطه" />

            <EditText
                android:id="@+id/main_add_new_ticket_dialog_ticket__related_department_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_add_new_ticket_dialog_ticket_related_department_tv"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/background_round_borders_ed"
                android:fontFamily="@font/iranyekanbold"
                android:gravity="right"
                android:hint="بخش مربوطه"
                android:maxLines="1"
                android:padding="8dp" />
        </RelativeLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/formContainer"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_button_confirm"
            android:fontFamily="@font/iranyekanbold"
            android:text="تایید و ادامه" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>