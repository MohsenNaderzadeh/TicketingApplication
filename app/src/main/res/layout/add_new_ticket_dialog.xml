<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <TextView
        android:id="@+id/main_add_new_ticket_dialog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/iranyekanbold"
        android:text="ایجاد یک تیکت جدید"/>


    <TextView
        android:id="@+id/main_add_new_ticket_dialog_ticket_subject_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/iranyekanbold"
        android:layout_below="@+id/main_add_new_ticket_dialog_title_tv"
        android:maxLines="1"
        android:text="موضوع تیکت :"/>

    <EditText
        android:id="@+id/main_add_new_ticket_dialog_ticket_subject_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/main_add_new_ticket_dialog_ticket_subject_tv"
        android:background="@drawable/background_round_borders_ed"
        android:fontFamily="@font/iranyekanbold"
        android:padding="8dp"
        android:gravity="right"
        android:maxLines="1"
        android:hint="موضوع تیکت"/>
    <TextView
        android:id="@+id/main_add_new_ticket_dialog_ticket_related_department_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/iranyekanbold"
        android:layout_below="@+id/main_add_new_ticket_dialog_ticket_subject_ed"
        android:text="بخش مربوطه"/>
    <EditText
        android:id="@+id/main_add_new_ticket_dialog_ticket__related_department_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/main_add_new_ticket_dialog_ticket_related_department_tv"
        android:background="@drawable/background_round_borders_ed"
        android:fontFamily="@font/iranyekanbold"
        android:padding="8dp"
        android:gravity="right"
        android:maxLines="1"
        android:hint="بخش مربوطه"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تایید و ادامه"
        android:fontFamily="@font/iranyekanbold"
        android:background="@drawable/background_button_confirm"
        android:layout_below="@id/main_add_new_ticket_dialog_ticket__related_department_ed"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"/>



</RelativeLayout>








</androidx.cardview.widget.CardView>