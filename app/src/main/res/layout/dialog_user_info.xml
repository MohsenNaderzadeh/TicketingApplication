<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    
    
    <RelativeLayout
        android:id="@+id/nameAndFamilyName_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="end"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/iranyekanbold"
            android:text="نام و نام خانوادگی دانشجو"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/dialog_user_info_userName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:fontFamily="@font/iranyekanbold"
            android:textSize="16sp"
            tools:text="محسن نادرزاده" />
    </RelativeLayout>
    
    
    <RelativeLayout
        android:id="@+id/nationalCode_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameAndFamilyName_rl"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/iranyekanbold"
            android:text="کد ملی"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/dialog_user_info_nationalCode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:fontFamily="@font/iranyekanbold"
            android:textSize="16sp"
            tools:text="0023466073" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/universityCodeRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nationalCode_rl"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/iranyekanbold"
            android:text="شماره دانشجویی"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/dialog_user_info_universityCode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:fontFamily="@font/iranyekanbold"
            android:textSize="16sp"
            tools:text="98120033111041" />
    </RelativeLayout>
    
    
    <RelativeLayout
        android:id="@+id/majorRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/universityCodeRl"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/iranyekanbold"
            android:text="رشته"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/dialog_user_info_majorName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:fontFamily="@font/iranyekanbold"
            android:textSize="16sp"
            tools:text="نرم افزار کامپیوتر" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/majorRl"
        android:orientation="horizontal">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/iranyekanbold"
            android:text="مقطع"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/dialog_user_info_majorgrade_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:fontFamily="@font/iranyekanbold"
            android:textSize="16sp"
            tools:text="کارشناسی" />
    </RelativeLayout>


</RelativeLayout>