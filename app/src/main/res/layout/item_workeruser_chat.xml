<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    app:layout_constrainedWidth="true">


    <TextView
        android:id="@+id/UserChat_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@drawable/background_chat_worker"
        android:fontFamily="@font/iranyekanbold"
        android:maxWidth="370dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="29dp"
        android:paddingBottom="8dp"
        android:text="سلام وقت شما بخیر سلام سلام وقت شما بخیر سلام سلام وقت شما بخیر سلام سلام وقت شما بخیر سلام سلام وقت شما بخیر سلام"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/space" />

    <Space
        android:id="@+id/space"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
        android:id="@+id/mywhitetail"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="3dp"
        android:adjustViewBounds="true"
        android:src="@drawable/white_rotatedtail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/space" />

    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/fillspace_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/mywhitetail" />


</androidx.constraintlayout.widget.ConstraintLayout>