<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundcard"
    android:padding="8dp">

    <View
        android:id="@+id/ticket_short_title_tv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_tickets_item_sketlon"
        android:fontFamily="@font/iranyekanbold"
        android:gravity="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/ticket_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ticket_short_title_tv"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@id/ticket_short_title_tv"
        android:background="#dfdfdf"
        android:fontFamily="@font/iranyekanbold"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ticket_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/ticket_title"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@id/ticket_short_title_tv"
        android:background="#dfdfdf"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/ticket_status_tv"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@id/ticket_desc_tv"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@id/ticket_short_title_tv"
        android:background="#dfdfdf" />

</RelativeLayout>