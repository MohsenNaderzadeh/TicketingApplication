<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stdUserChatContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/UserMessageContainer"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:src="@drawable/empty_avatar" />

    <LinearLayout
        android:id="@+id/UserMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/userAvatar"
        android:background="@drawable/background_chat_user"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="محسن نادرزاده"
            android:fontFamily="@font/iranyekanbold"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/stdUserChat_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="right"
            android:textColor="@android:color/white"
            android:fontFamily="@font/iranyekanbold"
            android:gravity="right"
            android:maxWidth="320dp"
            android:text="lllllllllddddddddddddddddddllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllll"
            android:textSize="14sp" />


    </LinearLayout>


</RelativeLayout>