<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stdUserChatContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    app:layout_constrainedWidth="true">


    <TextView
        android:id="@+id/stdUserChat_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_chat_stduser"
        android:fontFamily="@font/iranyekanbold"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="69dp"
        android:paddingBottom="10dp"
        android:text="Hello"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/marginSpacer" />

    <Space
        android:id="@+id/marginSpacer"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
        android:id="@+id/mytail"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginRight="4dp"
        android:scaleType="fitStart"
        android:src="@drawable/mytail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/marginSpacer" />

    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/fillspace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mytail" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="2dp"
        android:text="22:30"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/stdUserChat_text_tv"
        app:layout_constraintEnd_toEndOf="@id/stdUserChat_text_tv" />

    <com.inthecheesefactory.thecheeselibrary.widget.AdjustableImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_check"
        app:layout_constraintBottom_toBottomOf="@id/time"
        app:layout_constraintEnd_toEndOf="@id/stdUserChat_text_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>